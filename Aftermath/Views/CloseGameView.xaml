<UserControl x:Class="Aftermath.Views.CloseGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aftermath.Views"
             mc:Ignorable="d" 
             Width="500" Height="175">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/ConsumableUsageWindow.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource CloseButton}" Command="{Binding CloseCommand}" HorizontalAlignment="Right" Margin="20 10"/>
        <TextBlock Text="Do you really want to end the game?" Grid.Row="1" FontSize="20" Margin="20 0 0 0"/>

        <WrapPanel Grid.Row="2" Margin="20 10" HorizontalAlignment="Right">
            <Button Style="{StaticResource ActionButton}" Command="{Binding CloseCommand}" Content="No" Margin="0 0 10 0"/>
            <Button Style="{StaticResource ActionButton}" Command="{Binding CloseGameCommand}" Content="Yes"/>
        </WrapPanel>
    </Grid>
</UserControl>
