<UserControl x:Class="Aftermath.Views.Map.ExpeditionSelectOccupiedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:convs="clr-namespace:Aftermath.UI.Converters"
             xmlns:local="clr-namespace:Aftermath.Views.Map"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <convs:DayCountConverter x:Key="DayCountConverter"/>
        <convs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <convs:CharacterImageConverter x:Key="CharacterImageConverter"/>
        <convs:ToolImageConverter x:Key="ToolImageConverter"/>
    </UserControl.Resources>

    <Grid Height="400" Width="700">
        <Grid.RowDefinitions>
            <RowDefinition Height="155"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Row="0" Grid.Column="0" Margin="0 5 0 0">
            <Border Width="150" Height="150" Margin="9 0 7 0" Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/CharacterSelectEmpty.png"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/CharacterSelectEmptyMouseOver.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Image Source="{Binding CharacterImagePath, Converter={StaticResource CharacterImageConverter}}" Height="125" Margin="0 13 0 0"/>
            </Border>
        </WrapPanel>

        <WrapPanel Grid.Column="2" HorizontalAlignment="Right" Margin="0 5 10 0">
            <Border Width="150" Height="150" Margin="7 0 0 0" Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/CharacterSelectEmpty.png"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/CharacterSelectEmptyMouseOver.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Image Source="{Binding ToolName, Converter={StaticResource ToolImageConverter}}" Height="100"/>
            </Border>
        </WrapPanel>
    </Grid>
</UserControl>
