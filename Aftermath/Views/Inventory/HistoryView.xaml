<UserControl x:Class="Aftermath.Views.Inventory.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aftermath.Views.Inventory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/HistoryWindow.png"/>
        </Grid.Background>

        <StackPanel Margin="30 20">
            <TextBlock Text="History" FontSize="30"/>

            <ItemsControl ItemsSource="{Binding History}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Icons/HistoryElement.png"/>
                            </Grid.Background>

                            <WrapPanel>
                                <Image Source="{Binding CharacterIcon}" Width="40" Height="40" Margin="5 13 10 0" VerticalAlignment="Center"/>
                                <TextBlock Margin="0 13 10 0" VerticalAlignment="Center">consumed</TextBlock>
                                <Image Source="{Binding ConsumableIcon}" Width="40" Height="40" VerticalAlignment="Center" Margin="0 13 0 0"/>
                            </WrapPanel>

                            <Button Style="{StaticResource UndoButtton}" Command="{Binding UndoCommand}" HorizontalAlignment="Right" Margin="0 0 15 0" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Button Style="{StaticResource CloseButton}" Command="{Binding CloseCommand}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="30 20"/>
    </Grid>
</UserControl>
