<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="ActionButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Width="{TemplateBinding Width}" 
                      Height="{TemplateBinding Height}">
                        <Image Source="pack://application:,,,/Resources/Icons/ActionButton.png" 
                           Name="Image"
                           Stretch="Fill"
                           Width="{TemplateBinding Width}"
                           Height="{TemplateBinding Height}"/>
                        <ContentPresenter 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"
                        TextBlock.Foreground="{TemplateBinding Foreground}"
                        Margin="0 10 0 0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Image" Property="Source" Value="pack://application:,,,/Resources/Icons/ActionButtonMouseOver.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style TargetType="Button" x:Key="TitleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Width="{TemplateBinding Width}" 
                  Height="{TemplateBinding Height}">
                        <Image Source="pack://application:,,,/Resources/Icons/TitleButton.png" 
                       Name="Image"
                       Stretch="Fill"
                       Width="{TemplateBinding Width}"
                       Height="{TemplateBinding Height}"/>
                        <ContentPresenter 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    RecognizesAccessKey="True"
                    TextBlock.Foreground="{TemplateBinding Foreground}"
                    Margin="0 10 0 0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Image" Property="Source" Value="pack://application:,,,/Resources/Icons/TitleButtonMouseOver.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Chip Tunes"/>
    </Style>


